extends Node2D

@export (NodePath)onready var target = (get_node(target) as Node2D) if target else get_parent()
@export var bounce_duration := 1.0
@export var bounce_direction := Vector2.UP * 5


var _starting_position: = Vector2.ZERO

@onready var tween: = $Tween



func _ready() -> void :
	_starting_position = target.position



func bounce() -> void :
	tween.interpolate_property(target, "position", _starting_position + bounce_direction, _starting_position, bounce_duration, Tween.TRANS_QUAD, Tween.EASE_OUT)
	tween.start()
